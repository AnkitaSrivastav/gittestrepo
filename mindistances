#include <algorithm>
#include <unordered_map>
using namespace std;
int main()
{
    int n, flag;
    int b[5];
    cin >> n;
    int a[n];
    int min =999;
     int i;
     for(i=0;i<n;i++)
     {
         cin >>a[i];
     }
for(int k=0;k<n;k++)
     {
         for (int j=k+1;j<n;j++)
         {
           if(a[k]==a[j])
           {
             int diff = k-j;
            if (min > abs (diff))
             {
            min = abs(diff);
             }
            }
        else
           {
             flag =0;
           }
         }
     }
     if (min == 999)
     {
         min = -1;
     }
     cout << min;

    return 0;
}
